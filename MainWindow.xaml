<Window x:Class="CrystalHomeSystems.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="348" Width="930" WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized">
    <Grid Background="#FF2B2B2B">
        <Label Name="TitleLabel" Content="System Title" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="100" Foreground="#FFC7C7C7" FontFamily="advent" Margin="0,0,0,0">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="6"/>
            </Label.Effect>
        </Label>
        <Label Name="WordsSpoken" Content="Command line" HorizontalContentAlignment="Center" FontSize="72" FontFamily="advent" Foreground="#FFC7C7C7" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="98" Width="1920" Opacity="0.65">
            <Label.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="4"/>
            </Label.Effect>
        </Label>
        <Label Content="Copyright 2015 Austin VanAlstyne, Bailey Thorson&#xD;&#xA;" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Bottom" Height="40" Width="502" Background="{x:Null}" Foreground="#FFA8A8A8" FontSize="22"/>
        <Label Content="Development Build" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Bottom" Foreground="#FFB6B6B6" FontSize="18"/>

    </Grid>
</Window>
